doctype html
html(lang="en")
	head
		include ../inc/head.jade
		script(src="/b/holderjs/holder.js")
		!= js("user")
	body
		- page = user.name
		include ../inc/nav.jade
		.container.profile
			.col-md-2
			.col-md-8
				ul.nav.nav-pills
					li.active
						a(href="#")= user.name
					li
						a(href="/picture/userid/"+user._id) Pictures
				.panel.panel-default.profile
					.panel-body
						.col-xs-4
							if user.profilePicture
								img(src="/img/thumb/"+user.profilePicture.name)
							else
								img(src!="holder.js/200x200?auto=yes&textmode=exact")
						.col-xs-8
							h1= user.name || "No name oh dear this is bad!"
							- info = user.info || "No description."
							.info!= md(info)
							if isSelf
								a.edit(href="#") Edit
							.info-edit
								.form-group
									textarea.form-control.info-box(rows="3")
								.form-group
									button.btn.btn-primary.submit-edit Submit
							.alert
			.col-md-2