doctype html
html(lang="en")
	head
		include ./inc/head.jade
	body
		include ./inc/nav.jade
		.container
			.col-xs-4
			.col-xs-4
				form(action="/user/login", method="post")
					.form-group
						input.form-control(name="username", type="text", placeholder="Username")
					.form-group
						input.form-control(name="password", type="password", placeholder="Password")
					.form-group
						input.form-control.btn.btn-primary(type="submit", value="Login")
				form(action="/user/register", method="get")
					.form-group
						input.form-control.btn.btn-success(type="submit", value="Register")
			.col-xs-4